<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/payload_item_card_corner_radius" />
            <solid android:color="#1F000000" /><!--?colorControlHighlight-->
            <stroke android:width="1dp" android:color="@color/colorPrimary" android:dashWidth="@dimen/unit_1" android:dashGap="@dimen/unit_half" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/payload_item_card_corner_radius" />
            <solid android:color="#fff" />
            <stroke android:width="1dp" android:color="#1F000000" />
        </shape>
    </item>

</selector>